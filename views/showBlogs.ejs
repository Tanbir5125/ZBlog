<%- include("header1.ejs") %>

<div class="blogDisplay">
  <h1><%= blog.title %></h1>
  <p>~~ <%= blog.author %> ~~</p>
  <p><%= blog.content %></p>
  <div class="button-group">
    <a href="/" class="home">Back to Home</a>
    <a href="/edit-blog/<%= blogId %>" class="edit">Edit Blog</a>
    <form
      action="/delete-blog/<%= blogId %>"
      method="post"
      style="display: inline"
    >
      <input type="submit" value="Delete Blog" />
    </form>
  </div>
</div>

