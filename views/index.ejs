<%- include("header1.ejs") %>

    <div class="container">
        <% blogs.forEach(function(blog,index) { %>
            <div class="blog-entry">
                <h1>
                    <%= blog.title %>
                </h1>
                <p>Author: <%= blog.author %>
                </p>
                <p>
                    <%= blog.content %>
                </p>
                <a href="/edit-blog/<%= index %>">Edit</a>
                <form action="/delete-blog/<%= index %>" method="post" style="display: inline">
                    <button type="submit">Delete</button>
                </form>
            </div>
            <% }); %>
                <a href="/write-a-blog">Write a New Blog</a>
    </div>

    <%- include("footer.ejs") %>